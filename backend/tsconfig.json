{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "types": ["jest", "node"],
    "module": "commonjs",
    "rootDir": "./",
    "esModuleInterop": true,
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2020",
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@lib/*": ["./server/lib/*"],
      "@middleware": ["./server/middleware"],
      "@middleware/*": ["./server/middleware/*"],
      "@test/*": ["./.jest/*"]
    }
  }
}